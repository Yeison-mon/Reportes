@model MIS_REPORTES.ViewsModel.LoginViewModel

<h2 class="text-2xl font-semibold mb-6">Login</h2>
<form asp-action="Login" method="post" class="space-y-4">
    <div class="form-group">
        <label asp-for="User" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="User" class="form-control mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
        <span asp-validation-for="User" class="text-red-600 text-sm"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Password" type="password" class="form-control mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
        <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
    </div>
    <div class="form-group flex items-center">
        <input asp-for="RememberMe" class="form-check-input h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" />
        <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-900"></label>
    </div>
    <button type="submit" class="btn btn-primary mt-4 w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Login
    </button>
</form>
